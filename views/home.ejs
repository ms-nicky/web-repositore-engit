<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Portfolio - NICKY</title>

        <!-- External Libraries -->
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css"
        />
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />

        <!-- Inlined Custom Styles (from styles.css) -->
        <style>
/* Custom Font Face */
@font-face {
    font-family: 'MyAboutFont';
    src: url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap') format('truetype');
}

/* CSS Custom Properties (Variables) */
:root {
    --bg: #0f172a;
    --card: #0f172a;
    --panel: #1e293b;
    --muted: #94a3b8;
    --accent: #38bdf8;
    --primary: #2563eb;
    --glass: rgba(30,41,59,0.8);
    --transition: all 0.3s ease;
    --text-primary: #ffffff;
    --text-secondary: #e2e8f0;
}

/* Light Theme Variables */
[data-theme="light"] {
    --bg: #f8fafc;
    --card: #ffffff;
    --panel: rgba(71, 85, 105, 0.3);
    --muted: #64748b;
    --accent: #0ea5e9;
    --primary: #3b82f6;
    --glass: rgba(241,245,249,0.8);
    --text-primary: #0f172a;
    --text-secondary: #1e293b;
}

/* Base Styles */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(rgba(15, 23, 42, 0.85), rgba(15, 23, 42, 0.85)), 
                url('https://img1.pixhost.to/images/7900/631155537_kyzo.jpg') no-repeat center center fixed;
    background-size: cover;
    background-attachment: scroll;
    background-color: var(--bg);
    color: var(--text-primary);
    scroll-behavior: smooth;
    min-height: 100vh;
    overflow-x: hidden;
    will-change: transform;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    transition: var(--transition);
}

/* Light theme body background */
[data-theme="light"] body {
    background: linear-gradient(rgba(248, 250, 252, 0.3), rgba(248, 250, 252, 0.4)), 
                url('https://files.catbox.moe/ddpd2s.jpg') no-repeat center center fixed !important;
    background-size: cover !important;
    background-attachment: scroll !important;
}

/* Navigation Bar Styles */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 20px;
    background-color: var(--glass);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    transform: translateZ(0);
}

.logo {
    font-weight: bold;
    font-size: 1.2rem;
    color: var(--accent);
}

.login-btn {
    margin-left: auto;
    background: rgba(255,255,255,0.05);
    border: 1px solid var(--accent);
    color: var(--accent);
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.9rem;
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: 6px;
    backdrop-filter: blur(4px);
    text-decoration: none;
}

.navbar .login-btn {
    margin-right: 15px;
}

.login-btn:hover {
    background: var(--accent);
    color: var(--bg);
    box-shadow: 0 0 10px rgba(56,189,248,0.5);
    transform: translateY(-2px);
}

.menu-toggle {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 5px;
    cursor: pointer;
    width: 32px;
    height: 32px;
    background: none;
    border: none;
    z-index: 1100;
}

.menu-toggle span {
    display: block;
    height: 3px;
    width: 24px;
    background: #fff;
    border-radius: 10px;
    transition: var(--transition);
}

.menu-toggle.open span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
}

.menu-toggle.open span:nth-child(2) {
    opacity: 0;
}

.menu-toggle.open span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
}

/* Tabbar Styles */
.tabbar {
    display: flex;
    gap: 12px;
    position: absolute;
    top: 60px;
    right: 24px;
    background-color: rgba(30,41,59,0.7);
    padding: 10px;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0,0,0,0.3);
    transition: all 0.25s ease;
    transform: translateY(-10px);
    opacity: 0;
    pointer-events: none;
    flex-direction: column;
    min-width: 150px;
    z-index: 1100;
}

/* Light theme tabbar */
[data-theme="light"] .tabbar {
    background-color: rgba(241,245,249,0.95);
    box-shadow: 0 0 15px rgba(0,0,0,0.15);
    border: 1px solid rgba(30,41,59,0.1);
}

.tabbar .login-btn {
    margin-top: 8px;
    border-top: 1px solid rgba(255,255,255,0.1);
    padding-top: 12px;
    justify-content: center;
}

.tabbar.show {
    transform: translateY(0);
    opacity: 1;
    pointer-events: auto;
}

.tab-link {
    background: rgba(255,255,255,0.05);
    border: none;
    color: var(--muted);
    font-weight: 500;
    padding: 8px 14px;
    border-radius: 20px;
    cursor: pointer;
    font-size: 13px;
    transition: all 0.25s ease;
    outline: none;
    text-align: center;
    min-width: 86px;
    backdrop-filter: blur(4px);
}

/* Light theme tab links */
[data-theme="light"] .tab-link {
    background: rgba(30,41,59,0.1);
    color: #1e293b;
}

[data-theme="light"] .tab-link:hover {
    background: rgba(30,41,59,0.2);
    color: #0f172a;
}

[data-theme="light"] .tab-link.active {
    background: var(--primary);
    color: #ffffff;
}

.tab-link:hover {
    background-color: rgba(59,130,246,0.1);
    color: var(--accent);
    box-shadow: 0 0 8px #3b82f6;
}

.tab-link.active {
    background-color: rgba(37,99,235,0.8);
    color: #fff;
    box-shadow: 0 0 12px #3b82f6;
    transform: scale(1.03);
}

/* Header Styles */
header {
    text-align: center;
    padding: 100px 20px 40px;
}

header h1 {
    font-size: 2.5rem;
    margin: 10px 0;
    font-weight: 700;
}

header p {
    font-size: 1rem;
    opacity: 0.8;
    margin: 0;
    font-weight: 300;
}

.profile-pic {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    box-shadow: 0 0 15px rgba(255,255,255,0.08);
    margin-bottom: 20px;
}

/* Section Styles */
section {
    padding: 40px 20px;
    max-width: 1000px;
    margin: auto;
}

/* Shop Button Section */
.shop-section {
    padding: 20px 20px 30px;
    text-align: center;
}

.shop-button-container {
    display: flex;
    justify-content: center;
    align-items: center;
}

.shop-btn {
    background: linear-gradient(135deg, var(--accent), var(--primary));
    border: none;
    color: #fff;
    padding: 12px 32px;
    border-radius: 25px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 10px;
    box-shadow: 0 4px 15px rgba(56, 189, 248, 0.3);
    font-family: 'Poppins', sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.shop-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(56, 189, 248, 0.5);
    background: linear-gradient(135deg, #22d3ee, #3b82f6);
}

.shop-btn:active {
    transform: translateY(-1px);
}

.shop-btn i {
    font-size: 1.2rem;
}

/* Navigation Controls Container */
.nav-controls {
    display: flex;
    align-items: center;
    gap: 15px;
}

/* Theme Toggle Button */
.theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 1001;
}

.toggle-switch {
    position: relative;
    width: 60px;
    height: 30px;
    background: var(--panel);
    border-radius: 25px;
    border: 2px solid var(--accent);
    transition: var(--transition);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

.toggle-switch:hover {
    box-shadow: 0 4px 12px rgba(56, 189, 248, 0.3);
}

.toggle-slider {
    position: absolute;
    top: 2px;
    left: 2px;
    width: 22px;
    height: 22px;
    background: var(--accent);
    border-radius: 50%;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
}

.moon-icon,
.sun-icon {
    position: absolute;
    font-size: 12px;
    transition: all 0.3s ease;
}

.moon-icon {
    color: #fff;
    opacity: 1;
    transform: scale(1);
}

.sun-icon {
    color: #fbbf24;
    opacity: 0;
    transform: scale(0);
}

/* Light theme toggle states */
[data-theme="light"] .toggle-slider {
    left: calc(100% - 26px);
    background: #fbbf24;
}

[data-theme="light"] .moon-icon {
    opacity: 0;
    transform: scale(0);
}

[data-theme="light"] .sun-icon {
    opacity: 1;
    transform: scale(1);
}

[data-theme="light"] .toggle-switch {
    background: #e2e8f0;
    border-color: #fbbf24;
}

/* About Section */
.about {
    text-align: left;
    line-height: 1.8;
    font-size: 16px;
    color: var(--text-secondary);
}

.about h2 {
    text-align: center;
    margin-bottom: 20px;
    font-size: 32px;
    color: #3b82f6;
    font-family: 'MyAboutFont', sans-serif;
    font-weight: 600;
}

.about p {
    margin-bottom: 16px;
    text-align: justify;
    font-weight: 600;
    font-family: 'MyAboutFont', sans-serif;
}

.about strong {
    color: var(--accent);
    font-weight: 500;
}

/* Skills Panel */
.skills-panel {
    background: linear-gradient(180deg, rgba(255,255,255,0.02), transparent);
    border-radius: 12px;
    padding: 25px 20px 20px 20px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.45);
}

.skills-tabs {
    width: 100%;
    display: flex;
    gap: 8px;
    justify-content: center;
    margin-bottom: 20px;
    margin-top: 20px;
    flex-wrap: wrap;
    padding-top: 10px;
}

.skills-tabs button,
.cat-btn {
    background: transparent;
    border: 1px solid rgba(255,255,255,0.04);
    color: var(--muted);
    padding: 8px 16px;
    border-radius: 10px;
    cursor: pointer;
    text-align: center;
    font-weight: 500;
    min-width: 100px;
    transition: all 0.3s ease;
    font-family: 'Poppins', sans-serif;
    position: relative;
    z-index: 1;
    opacity: 1;
    transform: translateY(0);
}

/* Light theme skills tabs text color */
[data-theme="light"] .skills-tabs button,
[data-theme="light"] .cat-btn {
    color: #1e293b;
    border: 1px solid rgba(30,41,59,0.1);
}

[data-theme="light"] .skills-tabs button:hover,
[data-theme="light"] .cat-btn:hover {
    color: var(--accent);
    border-color: var(--accent);
}

/* Section titles always blue in both themes */
section h2 {
    color: #3b82f6 !important;
    font-size: 32px;
    font-weight: 600;
    font-family: 'Poppins', sans-serif;
}

.skills-tabs button:hover,
.cat-btn:hover {
    background: rgba(255,255,255,0.05);
    border-color: var(--accent);
    color: var(--accent);
    transform: translateY(-1px);
}

.skills-tabs button.active,
.cat-btn.active {
    background: var(--primary);
    color: #fff !important;
    border-color: rgba(255,255,255,0.06);
    box-shadow: 0 6px 18px rgba(37,99,235,0.12);
    transform: translateY(-2px);
    opacity: 1;
}

.skills-grid {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 16px;
}

.skill-card {
    background-color: var(--panel);
    padding: 14px;
    border-radius: 10px;
    text-align: center;
    box-shadow: 0 6px 18px rgba(0,0,0,0.45);
    transition: transform 0.3s ease, box-shadow 0.3s ease, opacity 0.3s ease, background-color 0.3s ease;
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transform: translateY(10px);
    will-change: transform, opacity;
}

/* Light theme skill cards - same color as panel */
[data-theme="light"] .skill-card {
    background-color: var(--panel);
    box-shadow: 0 6px 18px rgba(0,0,0,0.15);
    border: 1px solid rgba(30, 41, 59, 0.1);
}

[data-theme="light"] .skill-card:hover {
    box-shadow: 0 12px 30px rgba(0,0,0,0.25);
}

/* Light theme skills panel */
[data-theme="light"] .skills-panel {
    background: linear-gradient(180deg, rgba(30, 41, 59, 0.05), transparent);
    border: 1px solid rgba(30, 41, 59, 0.1);
}

.skill-card.show {
    opacity: 1;
    transform: translateY(0);
}

.skill-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 30px rgba(0,0,0,0.6);
}

.skill-card img {
    width: 48px;
    height: 48px;
    object-fit: contain;
    filter: drop-shadow(0 6px 14px rgba(0,0,0,0.6));
}

.skill-card p {
    margin: 0;
    font-weight: 600;
    font-size: 14px;
    color: var(--text-secondary);
}

/* Footer Styles */
footer {
    text-align: center;
    padding: 20px;
    font-size: 0.9rem;
    opacity: 0.6;
    margin-top: 40px;
}

/* Responsive Design */
@media (max-width: 768px) {
    .tabbar {
        right: 12px;
        top: 56px;
    }
    
    .nav-controls {
        gap: 12px;
    }
    
    .toggle-switch {
        width: 50px;
        height: 25px;
    }
    
    .toggle-slider {
        width: 19px;
        height: 19px;
    }
    
    [data-theme="light"] .toggle-slider {
        left: calc(100% - 23px);
    }
    
    header {
        padding-top: 90px;
    }
    
    header h1 {
        font-size: 2rem;
    }
    
    .skills-tabs {
        gap: 6px;
        overflow-x: auto;
        padding-bottom: 8px;
    }
    
    .skills-tabs button {
        white-space: nowrap;
        min-width: auto;
        padding: 8px 12px;
        font-size: 0.9rem;
    }
    
    .skills-grid {
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 12px;
    }
    
    .about {
        font-size: 14px;
    }
    
    .about h2 {
        font-size: 20px;
    }
}

@media (max-width: 480px) {
    .navbar {
        padding: 8px 16px;
    }
    
    header {
        padding: 80px 16px 30px;
    }
    
    section {
        padding: 30px 16px;
    }
    
    .skills-grid {
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 10px;
    }
    
    .skill-card {
        padding: 10px;
    }
    
    .skill-card img {
        width: 40px;
        height: 40px;
    }
    
    .skill-card p {
        font-size: 12px;
    }
}

/* Animation keyframes */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInDown {
    from {
        opacity: 0;
        transform: translateY(-30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
    * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
    
    body {
        scroll-behavior: auto;
    }
}

/* Focus states for accessibility */
.tab-link:focus,
.cat-btn:focus,
.menu-toggle:focus,
.login-btn:focus {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
    :root {
        --bg: #000000;
        --panel: #1a1a1a;
        --muted: #ffffff;
        --accent: #00ffff;
    }
}

/* Login Page Styles */
.login-container {
    min-height: 100vh;
    background: linear-gradient(135deg, var(--bg) 0%, rgba(15,23,42,0.9) 100%);
    background-image: url('https://files.catbox.moe/yqklap.jpg');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    display: flex;
    flex-direction: column;
}

[data-theme="light"] .login-container {
    background-image: url('https://files.catbox.moe/ddpd2s.jpg');
}

.login-content {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 20px 20px;
}

.login-form-wrapper {
    background: var(--glass);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 16px;
    padding: 40px;
    width: 100%;
    max-width: 400px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
}

.login-form-wrapper h1 {
    color: var(--primary);
    font-size: 32px;
    font-weight: 700;
    text-align: center;
    margin-bottom: 8px;
    font-family: 'Poppins', sans-serif;
}

.login-subtitle {
    color: var(--muted);
    text-align: center;
    margin-bottom: 32px;
    font-size: 16px;
}

.login-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.form-group label {
    color: var(--text-primary);
    font-weight: 500;
    font-size: 14px;
}

.form-group input {
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 8px;
    padding: 12px 16px;
    color: var(--text-primary);
    font-size: 16px;
    transition: all 0.3s ease;
}

.form-group input:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(59,130,246,0.1);
}

.form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 8px;
}

.checkbox-wrapper {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--muted);
    font-size: 14px;
    cursor: pointer;
}

.checkbox-wrapper input[type="checkbox"] {
    width: 16px;
    height: 16px;
    margin: 0;
}

.forgot-password {
    color: var(--primary);
    font-size: 14px;
    text-decoration: none;
    transition: color 0.3s ease;
}

.forgot-password:hover {
    color: var(--accent);
}

.login-form .login-btn {
    background: linear-gradient(135deg, var(--primary), var(--accent));
    color: white;
    border: none;
    border-radius: 8px;
    padding: 16px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-top: 12px;
}

.login-form .login-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(59,130,246,0.3);
}

.login-footer {
    text-align: center;
    margin-top: 24px;
    padding-top: 24px;
    border-top: 1px solid rgba(255,255,255,0.1);
}

.login-footer p {
    color: var(--muted);
    font-size: 14px;
}

.login-footer a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
}

.login-footer a:hover {
    color: var(--accent);
}

/* Light theme login adjustments */
[data-theme="light"] .form-group input {
    background: rgba(30,41,59,0.05);
    border-color: rgba(30,41,59,0.1);
    color: var(--text-primary);
}

[data-theme="light"] .login-footer {
    border-top-color: rgba(30,41,59,0.1);
}

/* Mobile login styles */
@media (max-width: 768px) {
    .login-form-wrapper {
        padding: 30px 20px;
        margin: 20px;
    }
    
    .login-content {
        padding: 60px 10px 20px;
    }
}
