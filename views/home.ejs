/**
 * Updates the active state of navigation tabs
 * @param {HTMLElement} activeBtn - The button to set as active
 */
function updateActiveTab(activeBtn) {
    // Remove active class from all tab links
    document.querySelectorAll('.tab-link').forEach(el => {
        el.classList.remove('active');
    });
    
    // Add active class to clicked button if it's a tab-link
    if (activeBtn && activeBtn.classList.contains('tab-link')) {
        activeBtn.classList.add('active');
    }
}

/**
 * Toggles the mobile navigation menu
 * @param {HTMLElement} toggleElement - The hamburger menu toggle element
 */
function toggleMenu(toggleElement) {
    const tabLinks = document.getElementById('tabLinks');
    
    if (toggleElement && tabLinks) {
        toggleElement.classList.toggle('open');
        tabLinks.classList.toggle('show');
    }
}

/**
 * Closes the mobile navigation menu
 */
function closeMobileMenu() {
    const tabLinks = document.getElementById('tabLinks');
    const menuToggle = document.querySelector('.menu-toggle');
    
    if (tabLinks && menuToggle) {
        tabLinks.classList.remove('show');
        menuToggle.classList.remove('open');
    }
}

/**
 * Shows skills for a specific category with smooth animations
 * @param {string} category - The category of skills to show
 * @param {HTMLElement} btn - The category button that was clicked
 */
function showCategory(category, btn) {
    if (!category) return;
    
    // Update active category button
    updateActiveCategoryButton(btn);
    
    // Hide current visible skills with fade out animation
    hideCurrentSkills();
    
    // Show new category skills after fade out completes
    setTimeout(() => {
        showSkillsForCategory(category);
    }, 300); // Match this with CSS transition duration
}

/**
 * Updates the active state of category buttons
 * @param {HTMLElement} activeBtn - The button to set as active
 */
function updateActiveCategoryButton(activeBtn) {
    document.querySelectorAll('.cat-btn').forEach(btn => {
        btn.classList.remove('active');
    });
    
    if (activeBtn) {
        activeBtn.classList.add('active');
    }
}

/**
 * Hides currently visible skill cards
 */
function hideCurrentSkills() {
    document.querySelectorAll('.skill-item.show').forEach(item => {
        item.classList.remove('show');
    });
}

/**
 * Shows skill cards for a specific category
 * @param {string} category - The category of skills to show
 */
function showSkillsForCategory(category) {
    const allSkillItems = document.querySelectorAll('.skill-item');
    
    allSkillItems.forEach(item => {
        if (item.dataset.cat === category) {
            item.style.display = 'flex';
            item.setAttribute('aria-hidden', 'false');
            
            // Trigger show animation with slight delay for staggered effect
            setTimeout(() => {
                item.classList.add('show');
            }, 10);
        } else {
            item.style.display = 'none';
            item.setAttribute('aria-hidden', 'true');
            item.classList.remove('show');
        }
    });
}

/**
