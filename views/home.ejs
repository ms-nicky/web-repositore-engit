    // Update active state based on current section
    navLinks.forEach(link => {
        link.classList.remove('active');
        if (link.textContent.toLowerCase() === currentSection) {
            link.classList.add('active');
        }
    });
    
    // Default to home if no section is clearly active
    if (!currentSection) {
        const homeLink = document.querySelector('.tab-link[onclick*="home"]');
        if (homeLink) {
            homeLink.classList.add('active');
        }
