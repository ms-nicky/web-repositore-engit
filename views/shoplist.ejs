  <script>
    // Animasi saat scroll
    const animateOnScroll = () => {
      const elements = document.querySelectorAll('.card, footer');
      elements.forEach(el => {
        const rect = el.getBoundingClientRect();
        if (rect.top < window.innerHeight - 100) {
          el.style.animationPlayState = 'running';
        }
      });
    };

    window.addEventListener('load', () => {
      animateOnScroll();
    });

    window.addEventListener('scroll', () => {
      animateOnScroll();
    });

    // Filter kategori dengan animasi
    const pills = document.querySelectorAll('.pill');
    const cards = document.querySelectorAll('.card');
    const grid = document.getElementById('grid');
    
    pills.forEach(p => {
      p.addEventListener('click', () => {
        pills.forEach(x => x.classList.remove('active'));
        p.classList.add('active');
        const f = p.dataset.filter;
        
        // Animasi fade out
        cards.forEach(c => {
          if (!(f === 'all' || c.dataset.cat === f)) {
            c.classList.add('hidden');
          }
        });
        
        // Set timeout untuk animasi fade in
        setTimeout(() => {
          cards.forEach(c => {
            if (f === 'all' || c.dataset.cat === f) {
              c.classList.remove('hidden');
            }
          });
          
          // Reflow grid untuk menghindari jarak kosong
          grid.style.display = 'none';
          grid.offsetHeight; // Trigger reflow
          grid.style.display = 'grid';
        }, 300);
      });
    });

    // Tombol pesan WA dengan flow baru
    const WA_NUMBER = '6285649689059';
    async function toWA(text, btn) {
      const originalHTML = btn.innerHTML;
      
      // Tampilkan loading
      btn.disabled = true;
      btn.innerHTML = '<span class="loading"></span> Memproses...';
      
      // Simulasi loading 3 detik
      await new Promise(resolve => setTimeout(resolve, 3000));
      
      // Tampilkan checkmark
      btn.innerHTML = '<svg class="checkmark" viewBox="0 0 24 24" fill="currentColor"><path d="M9 16.2 4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4z"/></svg> Pesanan Terkirim!';
      
      // Buka WhatsApp setelah animasi
      setTimeout(() => {
        const url = `https://wa.me/${WA_NUMBER}?text=${encodeURIComponent(text)}`;
        window.open(url, '_blank');
        btn.innerHTML = originalHTML;
        btn.disabled = false;
      }, 1000);
    }

    document.querySelectorAll('.order').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const card = e.currentTarget.closest('.card');
        const item = card.querySelector('.title').textContent.trim();
        const plans = Array.from(card.querySelectorAll('.list div')).map(div => {
          return {
            spec: div.querySelector('span').textContent.trim(),
            price: div.querySelector('strong').textContent.trim()
          };
        });

        // Buat pesan dengan daftar paket
        let message = `Halo kak NICKY, saya mau pesan:\n• Produk: ${item}\n\nDaftar Paket:\n`;
        plans.forEach(plan => {
          message += `- ${plan.spec}: ${plan.price}\n`;
        });
        message += `\nSaya tertarik dengan paket mana ya? Mohon info ketersediaan & proses order.`;

        await toWA(message, e.currentTarget);
      });
    });
  </script>
